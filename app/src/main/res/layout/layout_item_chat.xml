<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:background="?attr/selectableItemBackground"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvNameSender"
        android:layout_width="@dimen/_0"
        android:layout_height="wrap_content"
        android:paddingRight="@dimen/_15"
        android:paddingLeft="@dimen/_15"
        android:paddingTop="@dimen/_15"
        android:gravity="center_vertical"
        android:text="@string/txt_pass"
        android:textColor="@color/text"
        android:textStyle="bold"
        android:textSize="@dimen/txt_size_16"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgProduct"
        android:layout_width="@dimen/_150"
        android:layout_height="@dimen/_100"
        android:gravity="center_vertical"
        android:text="@string/txt_pass"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/viewMain"
        app:layout_constraintTop_toTopOf="parent"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvNameProduct"
        android:layout_width="@dimen/_0"
        android:layout_height="wrap_content"
        android:paddingRight="@dimen/_15"
        android:paddingLeft="@dimen/_16"
        android:layout_marginTop="@dimen/_5"
        android:ellipsize="end"
        android:maxLines="1"
        android:textStyle="bold"
        android:gravity="center_vertical"
        android:text="@string/txt_pass"
        android:textColor="@color/text"
        android:textSize="@dimen/txt_size_14"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvNameSender"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvDes"
        android:layout_width="@dimen/_0"
        android:layout_height="wrap_content"
        android:paddingRight="@dimen/_15"
        android:paddingLeft="@dimen/_16"
        android:ellipsize="end"
        android:maxLines="1"
        android:gravity="center_vertical"
        android:text="@string/des_xe_may"
        android:textColor="@color/text"
        android:textSize="@dimen/txt_size_14"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/imgProduct"
        app:layout_constraintTop_toBottomOf="@id/tvNameProduct"/>
    <View
        android:id="@+id/viewMain"
        android:layout_width="@dimen/_0"
        android:layout_height="@dimen/_0"
        app:layout_constraintEnd_toStartOf="@id/imgProduct"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/tvDes"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_2"
        android:background="@color/grey_2"
        app:layout_constraintTop_toBottomOf="@id/imgProduct"/>

</androidx.constraintlayout.widget.ConstraintLayout>