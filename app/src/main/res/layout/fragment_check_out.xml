<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".cart.CheckOutFragment">

    <include
        android:id="@+id/layout_header"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        layout="@layout/layout_header"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewDelivery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="@dimen/_10"
        android:elevation="@dimen/_10"
        android:layout_margin="@dimen/_5"
        app:layout_constraintTop_toBottomOf="@id/layout_header">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvTitleAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/_16"
                android:paddingRight="@dimen/_16"
                android:paddingBottom="@dimen/_10"
                android:paddingTop="@dimen/_16"
                android:textColor="@color/text"
                android:textSize="@dimen/_16"
                android:text="@string/txt_delivery"
                app:layout_constraintTop_toTopOf="parent"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvDeliveryAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/des_xe_may"
                android:paddingLeft="@dimen/_16"
                android:paddingRight="@dimen/_16"
                android:paddingBottom="@dimen/_16"
                app:layout_constraintTop_toBottomOf="@id/tvTitleAddress"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvProducts"
        android:layout_height="@dimen/_0"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/_10"
        android:clipToPadding="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardViewDelivery"
        app:layout_constraintBottom_toTopOf="@id/tvPaymentMethod"/>

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1"
        android:background="@color/grey_2"
        android:layout_marginBottom="@dimen/_16"
        app:layout_constraintTop_toBottomOf="@id/rvProducts"
        app:layout_constraintBottom_toTopOf="@id/tvPaymentMethod"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvPaymentMethod"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/txt_payment_method"
        android:textColor="@color/text"
        android:textSize="@dimen/txt_size_16"
        android:textStyle="bold"
        android:padding="@dimen/_10"
        app:layout_constraintTop_toBottomOf="@id/view1"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvMethod"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/txt_method"
        android:textColor="@color/text"
        android:textSize="@dimen/txt_size_16"
        android:paddingLeft="@dimen/_10"
        android:paddingBottom="@dimen/_10"
        app:layout_constraintTop_toBottomOf="@id/tvPaymentMethod"
        app:layout_constraintBottom_toTopOf="@id/view"/>
    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1"
        android:background="@color/grey_2"
        android:layout_marginBottom="@dimen/_16"
        app:layout_constraintTop_toBottomOf="@id/tvMethod"
        app:layout_constraintBottom_toTopOf="@id/layout_footer"/>

    <include
        android:id="@+id/layout_footer"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/view"
        app:layout_constraintBottom_toBottomOf="parent"
        layout="@layout/layout_footer_cart"/>

</androidx.constraintlayout.widget.ConstraintLayout>