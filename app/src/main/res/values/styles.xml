<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="active">
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="Inactive">
        <item name="android:textColor">#B9050505</item>
    </style>

    <style name="text_add">
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">@dimen/txt_size_16</item>
        <item name="android:layout_margin">@dimen/_16</item>
    </style>

    <style name="edt_add">
        <item name="android:textColor">@color/text</item>
        <item name="android:textColorHint">@color/_FF6B6B6D</item>
        <item name="android:textSize">@dimen/txt_size_16</item>
    </style>

    <style name="edt_add_search">
        <item name="android:textColor">@color/text</item>
        <item name="android:textColorHint">@color/_FF6B6B6D</item>
        <item name="android:textSize">@dimen/txt_size_14</item>
    </style>

    <style name="text_input_layout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/transparent</item>
        <item name="hintTextColor">@color/color_blue</item>
        <item name="errorEnabled">true</item>
        <item name="android:layout_marginLeft">@dimen/_16</item>
        <item name="android:layout_marginRight">@dimen/_16</item>
        <item name="android:layout_marginTop">@dimen/_2</item>

    </style>

    <style name="tabLayout">
        <item name="android:textSize">@dimen/txt_size_16</item>
        <item name="lineHeight">@dimen/_16</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="navText">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#050505</item>
    </style>

</resources>